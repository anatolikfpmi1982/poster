{% extends "AppBundle::layout.html.twig" %}

{% block title %}Картина в раме "{{ pictureMain.title }}" {% endblock %}

{% block meta_keywords %}{{ pictureMain.title }}{% endblock %}

{% block meta_description %}Картина в раме {{ pictureMain }} купить{% endblock %}

{% block body %}
    <div class="row az-page-main-section-div">
        {% include('AppBundle:Component:Blocks/breadcrumb.html.twig') %}
    </div>
    <div class="row az-page-main-section-div az-page-category-main-section-div">
        <div class="col-md-12 col-sm-12 container-fluid">
            <div class="row page-title az-picture-page-title">Картина в раме {{ pictureMain.title }}</div>
            {% if pictureThicknesses is defined and pictureThicknesses %}
                <div class="row az-category-page-pictures-div">
                    <div class="row az-page-section-body az-page-main-popular container-fluid">
                        <div class="row">
                            {% for type in pictureThicknesses %}
                            {% include('AppBundle:Component:picture.cell.frame.html.twig') %}
                            {% if loop.index != 1 and loop.index % 3 == 0 %}
                        </div>
                        <div class="row">
                            {% endif %}

                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row az-category-page-pictures-div">
                    <div class="col-md-12 col-sm-12">
                        Рамы не определены.
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
