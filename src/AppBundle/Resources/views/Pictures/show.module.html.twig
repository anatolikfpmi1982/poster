{% extends "AppBundle::layout.html.twig" %}

{% block title %}Модульная картина "{{ pictureMain.title }}" {% endblock %}

{% block meta_keywords %}{{ pictureMain.title }}{% endblock %}

{% block meta_description %}Модульная картина {{ pictureMain }} купить{% endblock %}

{% block body %}
    <div class="row az-page-main-section-div">
        {% include('AppBundle:Component:Blocks/breadcrumb.html.twig') %}
    </div>
    <div class="row az-page-main-section-div az-page-category-main-section-div">
        <div class="col-md-12 col-sm-12 container-fluid">
            <div class="row page-title az-picture-page-title">Модульная картина {{ pictureMain.title }}</div>
            {% if moduleTypes is defined and moduleTypes %}
                <div class="row az-category-page-pictures-div">
                    <div class="row az-page-section-body az-page-main-popular container-fluid">
                        <div class="row">
                            {% for type in moduleTypes %}
                                {% include('AppBundle:Component:picture.cell.module.html.twig') %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row az-category-page-pictures-div">
                    <div class="col-md-12 col-sm-12">
                        Модульные типы не определены.
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
