{% extends "AppBundle::layout.html.twig" %}

{% if page.seoKeywords %}
    {% set keywords = page.seoKeywords %}
{% elseif site_settings is defined and site_settings and site_settings.seo_keywords is defined and site_settings.seo_keywords %}
    {% set keywords = site_settings.seo_keywords %}
{% else %}
    {% set keywords = "картины, картины на заказ" %}
{% endif %}
{% block meta_keywords %}{{ keywords }}{% endblock %}

{% if page.seoDescription %}
    {% set description = page.seoDescription %}
{% elseif site_settings is defined and site_settings and site_settings.seo_description is defined and site_settings.seo_description %}
    {% set description = site_settings.seo_description %}
{% else %}
    {% set description = "картины, картины на заказ, сайт продаж картин" %}
{% endif %}
{% block meta_description %}{{ description }}{% endblock %}

{% if page.seoTitle %}
    {% set title = page.seoTitle %}
{% else %}
    {% set title = page.title %}
{% endif %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row az-page-main-section-div">
        {% include('AppBundle:Component:Blocks/breadcrumb.html.twig') %}
    </div>
    <div class="row container-fluid az-page-main-section-div az-static-page-div">
        <div class="col-md-12" container-fluid>
        <div class="row page-title az-static-page-title">
            {% if page.showTitle %}
            <div class="col-md-8">{{ page.title }}</div>
            {% endif %}
            <div class="col-md-2">
                <div class="row az-picture-page-constructor-block hidden" id="az-picture-page-sidebar-deffered-div">
                    <div class="col-md-12">
                        <a href="{{ path('deferred') }}">
                            <button class="btn az-btn-delayed-image">Отложенные <span id="az-picture-page-sidebar-deffered-div-count">0</span></button>
                        </a>
                    </div></div></div>
            <div class="col-md-2">
                <div class="row az-picture-page-constructor-block hidden" id="az-picture-page-sidebar-myfiles-div">
                    <div class="col-md-12">
                        <a href="{{ path('my_files') }}">
                            <button class="btn az-btn-myfiles-image">Мои файлы  <span id="az-picture-page-sidebar-myfiles-div-count">0</span></button>
                        </a>
                    </div></div>
            </div>
        </div></div>
        <div class="row az-static-page-content">
            {{ page.body|raw }}
        </div></div>
    </div>
{% endblock %}
