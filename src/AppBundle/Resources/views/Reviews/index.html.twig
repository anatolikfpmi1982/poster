{% extends "AppBundle::layout.html.twig" %}

{% block title %}Отзывы{% endblock %}

{% block body %}

    <div class="col-md-12 container-fluid">
    <div class="row az-page-main-section-div">
        {% include('AppBundle:Component:Blocks/breadcrumb.html.twig') %}
    </div>

        <div class="row az-page-main-section-div">

        <div class="col-md-12 container-fluid">
            <div class="row page-title az-picture-page-title">Отзывы</div>
            {# rewiews body #}
            {% for article in pagination %}

                <div class="row az-reviews">
                    <div class="col-md container-fluid">
                        <div class="row">
                            <div class="col-md-6 az-reviews-name">{{ article.name }}</div>
                            <div class="col-md-6 az-rewiews-date">{{ article.createdAt | date('Y-m-d') }}</div>
                        </div>
                        <div class="row">
                            <div class="col-md az-rewiews-article">{{ article.review }}</div>
                        </div>

                </div> <div class="bottomarrowleft"></div> </div>


            {% endfor %}

            {# display navigation #}
            <div class="pagination">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
    <p>
        Добавить новый отзыв
    </p>
    <form id="add_review">
        <div>
            <label for="add_review_name">Ф.И.О.</label>
            <input id="add_review_name" name="add_review_name" required />
        </div>
        <div>
            <label for="add_review_email">Email</label>
            <input id="add_review_email" name="add_review_email" required />
        </div>
        <div>
            <label for="add_review_city">Город</label>
            <input id="add_review_city" name="add_review_city" />
        </div>
        <div>
            <label for="add_review_description">Отзыв</label>
            <textarea id="add_review_description" name="add_review_description"
                      placeholder="Введите текст отзыва" required></textarea>
        </div>
        <button type="submit">Отправить</button>
    </form>
{% endblock %}
