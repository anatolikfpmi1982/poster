{% extends "AppBundle::layout.html.twig" %}

{% block title %}Страница контактов{% endblock %}

{% block meta_keywords %}{% if site_settings is defined and site_settings and site_settings.seo_keywords is defined and site_settings.seo_keywords %}{{ site_settings.seo_keywords }}{% else %}
    картины,картины на заказ
{% endif %}
{% endblock %}

{% block meta_description %}{% if site_settings is defined and site_settings and site_settings.seo_description is defined and site_settings.seo_description %}{{ site_settings.seo_description }}{% else %}
    картины,картины на заказ, сайт продаж картин
{% endif %}
{% endblock %}

{% block body %}
    <div class="row az-page-main-section-div">
        {% include('AppBundle:Component:Blocks/breadcrumb.html.twig') %}
    </div>
    <div class="row container-fluid az-page-main-section-div az-static-page-div">
        <div class="col-md-12 container-fluid">
            <div class="row page-title az-static-page-title">

            <div class="col-md-8">Контакты</div>
            <div class="col-md-2">
                <div class="row az-picture-page-constructor-block hidden" id="az-picture-page-sidebar-deffered-div">
                    <div class="col-md-12">
                        <a href="{{ path('deferred') }}">
                            <button class="btn az-btn-delayed-image">Отложенные <span id="az-picture-page-sidebar-deffered-div-count">0</span></button>
                        </a>
                    </div></div></div>
                <div class="col-md-2">
                <div class="row az-picture-page-constructor-block hidden" id="az-picture-page-sidebar-myfiles-div">
                    <div class="col-md-12">
                        <a href="{{ path('my_files') }}">
                            <button class="btn az-btn-myfiles-image">Мои файлы  <span id="az-picture-page-sidebar-myfiles-div-count">0</span></button>
                        </a>
                    </div></div>
                </div>
            </div></div>
            {% if site_settings is defined and site_settings and site_settings.contact_us_text is defined and site_settings.contact_us_text %}
                {% set contact_us_text = site_settings.contact_us_text %}
            {% else %}
                {% set contact_us_text = '' %}
            {% endif %}
            <div class="row az-static-page-content">
                {{ contact_us_text|raw }}
            </div>
            <div class="col-md-12 container-fluid">
                <form id="add_contacts">
                    <div><label class="az-add_contacts_name" for="name">Ф.И.О.</label>
                        <input id="az-add_contacts_name" name="add_review_name" required/>
                    </div>
                    <div><label class="az-add_contacts_email" for="email">Email</label>
                        <input id="az-add_contacts_email" name="add_review_email" required/>
                    </div>
                    <div>
                        <label class="az-add_contacts_city" for="city">Город</label>
                        <input id="az-add_contacts_city" name="add_review_city"/>
                    </div>
                    <label class="az-add_contacts_description" for="description">Сообщение</label>
                    <textarea id="az-add_contacts_description" name="az-add_review_description"
                              placeholder="Введите ваше сообщение" required></textarea>
                    <button class="btn btn-bg az-header-feedback-btn" type="submit">Отправить</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
