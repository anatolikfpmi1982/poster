<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="row text-left">
            <div class="col-md-4 container-fluid az-header-top">
                <div class="row az-logo-title-img-div">
                    {% if site_settings is defined and site_settings and site_settings.logo is defined and site_settings.logo %}
                        {% set site_logo = '/' ~ site_settings.logo %}
                    {% else %}
                        {% set site_logo = asset('bundles/app/images/logo.png') %}
                    {% endif %}
                    <img src="{{ site_logo }}" class="az-logo-title-img" title="{% trans %}Logo{% endtrans %}"/>
                </div>
                <div class="row az-logo-title-text-div">
                    {% if site_settings is defined and site_settings and site_settings.logo_header_text is defined and site_settings.logo_header_text %}
                        {{ site_settings.logo_header_text|raw }}
                    {% endif %}
                </div>
            </div>
            <div class="col-md-4 container-fluid az-header-top">
                <div class="row">
                    <div class="col-md-9 container az-header-address-div">
                        <div class="row az-header-address-container az-header-phone-number">
                            {% if site_settings is defined and site_settings and site_settings.info_text is defined and site_settings.info_text %}
                                {{ site_settings.info_text|raw }}
                            {% endif %}
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-2 container-fluid az-header-top">
                {% if site_settings.enable_own_picture %}
                <div class="row">
                    <div class="col-md-3">
                        <img src="{{ asset('bundles/app/images/download.png') }}" class="az-download-title-img az-basket-title-img"
                             title="{% trans %}download{% endtrans %}"/>
                    </div>
                    <div class="col-md-9 container az-header-download-div">
                        Загрузить свое <br/>изображение.
                    </div>
                </div>
                {% endif %}
            </div>
            <div class="col-md-2 container-fluid text-right">
                <div class="row text-right">
                    <div class="col-md-3">&nbsp;</div>
                    <div class="col-md-3 az-main-page-header-top-cells az-main-page-header-icon-cell">
                        <img src="{{ asset('bundles/app/images/basket.png') }}" class="az-basket-title-img" title="{% trans %}basket{% endtrans %}"/>
                    </div>
                    <div class="col-md-6 container text-left az-main-page-header-top-cells az-header-basket-div">
                        <div class="row az-header-basket-container az-header-basket-text">
                            <div class="col-md-12">Корзина</div>
                        </div>
                        <div class="row az-header-basket-container az-header-basket-count-text">
                            <div class="col-md-12">Товаров: <span class="az-header-basket-count">0</span></div>
                        </div>
                    </div>
                </div>
                <div class="row az-header-address-container az-header-feedback-btn-div">
                    <div class="col-md-12">
                        <button class="btn btn-bg az-header-feedback-btn">Обратный звонок</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid az-main-page-top-menu-div">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            {% if site_blocks and site_blocks.MainMenu %}
                <ul class="nav navbar-nav">
                    {% for menu in site_blocks.MainMenu %}
                        <li {% if menu.target == active_menu %}class="active"{% endif %}>
                            <a href="/{{ menu.getUrl() }}">
                                {% if menu.image %}
                                    <img src="/files/main_menu/{{ menu.image.getFilename() }}"/>
                                {% endif %}
                                {{ menu.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
            <div class="col-sm-3 col-md-3 pull-right az-main-page-search">
                <form class="navbar-form" role="search" action="/search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Поиск" name="query" id="srch-term">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>

        </div><!--/.nav-collapse -->
    </div><!--/.container-fluid -->
</nav>