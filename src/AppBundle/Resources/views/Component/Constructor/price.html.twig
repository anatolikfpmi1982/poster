<div class="col-md-12 az-picture-price-div container-fluid">
    <div class="row text-center az-picture-page-sidebar-header-block az-picture-page-sidebar-price ">
        <span class="az-picture-page-sidebar-price-value" data-price="0">0</span> BYN
    </div>
    <div class="row az-picture-page-sidebar-size-div-body">
        <div class="col-md-6 text-left az-picture-page-sidebar-price-btn-div-left">
            <button class="btn az-picture-page-sidebar-price-btn picture_order-bnt"
                    data-own-id="{% if ownPicture is defined %}{{ pictureMain.id }}{% endif %}"
                    data-id="{% if ownPicture is not defined %}{{ pictureMain.id }}{% endif %}"
                    data-title="{% if ownPicture is not defined %}{{ pictureMain.title }}{% endif %}"
                    data-title-own="{% if ownPicture is defined %}Своя картина{% endif %}"
                    data-cart-id="{% if cart_id %}{{ cart_id }}{% endif %}"
            >
                {% if cart_id %}Редактировать{% else %}Заказать{% endif %}
            </button>
        </div>
        {% if ownPicture is not defined %}
            <div class="col-md-6 text-right az-picture-page-sidebar-price-btn-div-right">
                <button class="btn az-picture-page-sidebar-price-btn picture_defer-bnt" data-id="{{ pictureMain.id }}">Отложить</button>
            </div>
        {% endif %}
    </div>
</div>