<div class="col-md-12 az-picture-size-div az-picture-banner-material-div container-fluid">
    <div class="row az-picture-page-sidebar-size">
        <div class="col-md-4 text-left az-picture-page-sidebar-header-block az-picture-page-sidebar-material-div-left">
            <label data-for="picture-size">Материал: </label>
        </div>
        <div class="col-md-8 text-right az-picture-page-sidebar-div-right">
            <button class="btn az-picture-page-sidebar-size-btn az-picture-page-hint">Подробнее ?</button>
            {% if help_settings is defined and help_settings and help_settings.materialHelp is defined and help_settings.materialHelp %}
                <div class="hidden">{{ help_settings.materialHelp|raw }}</div>
            {% endif %}
        </div>
    </div>
    <div class="row az-picture-page-sidebar-size-div-body az-picture-page-sidebar-material-div-select">
        {% if materials %}
        {% set ind = 1 %}
        {% for material in materials %}
        <div class="col-md-4 container-fluid">
            <div class="row text-center">
                <img src="/files/banner_materials/small_thumb/{{ material.image.getFilename() }}" class="az-picture-page-material-img"/><br/>
                <span class="az-picture-page-type-img-text">{{ material.title }}</span>
            </div>
            <div class="row text-center az-picture-page-material-radio-div">
                <input type="radio" class="btn az-picture-page-constructor-material-radio" value="{{ material.title }}" title="az-picture-page-material"
                       name="az-picture-page-material"
                       data-title="{{ material.title }}"
                       data-id="{{ material.id }}"
                       {% if ind == 1 %}checked{% endif %}/>
            </div>
        </div>

        <input type="hidden" name="constructor_banner_{{ material.id }}_min_square" id="constructor_banner_{{ material.id }}_min_square"
               value="{{ material.minArea }}">
        <input type="hidden" name="constructor_banner_{{ material.id }}_max_square" id="constructor_banner_{{ material.id }}_max_square"
               value="{{ material.maxArea }}">
        <input type="hidden" name="constructor_banner_{{ material.id }}_min_price" id="constructor_banner_{{ material.id }}_min_price"
               value="{{ material.minPrice }}">
        <input type="hidden" name="constructor_banner_{{ material.id }}_max_price" id="constructor_banner_{{ material.id }}_max_price"
               value="{{ material.maxPrice }}">
        <input type="hidden" name="constructor_banner_{{ material.id }}_additional_price" id="constructor_banner_{{ material.id }}_additional_price"
               value="{{ material.price }}">

        {% if ind % 3 == 0 %}
    </div>
    <div class="row">
        {% endif %}
        {% set ind = ind + 1 %}
        {% endfor %}
        {% endif %}
    </div>
</div>