<div class="row">
    <div class="col-md-12 owl-carousel owl-theme" id="owl-example">
        {% if pictureThicknesses is defined and pictureThicknesses %}
            {% for thickness in pictureThicknesses %}
                {% if thickness.images is defined and thickness.images and thickness.images[0] is defined and thickness.images[0] %}
                    {% set img = '/files/frames/mini_thumb/' ~ thickness.images[0].getFilename() %}
                {% else %}
                    {% set img = asset('bundles/app/images/material_default.png') %}
                {% endif %}
                <div class="item">
                    <img src="{{ img }}" class="az-picture-page-constructor-picture-thickness-img"
                         data-title="{{ thickness.title }}"
                         data-ratio="{{ thickness.ratio }}"
                         data-id="{{ thickness.id }}"
                    />
                </div>
            {% endfor %}
            <input type="hidden" name="az-picture-constructor-frame-selected" id="az-picture-constructor-frame-selected" value="{{ pictureThicknesses[0].title }}">
            <input type="hidden" name="az-picture-constructor-frame-ratio-selected" id="az-picture-constructor-frame-ratio-selected" value="{{ pictureThicknesses[0].ratio }}">
            <input type="hidden" name="az-picture-constructor-frame-id-selected" id="az-picture-constructor-frame-id-selected" value="{{ pictureThicknesses[0].id }}">
        {% else %}
            У нас пока отсутствуют рамы для данного вида картин.
        {% endif %}
    </div>
</div>
<div class="row">
    <div class="col-md-12 text-right">
        <a href="{{ path('frames') }}">Посмотреть все рамы</a>
    </div>
</div>