{% if picture.image and picture.image.getFilename() %}
    {% set img = '/files/pictures/thumb/' ~ picture.image.getFilename() %}
{% else %}
    {% set img = asset('bundles/app/images/default_picture.jpg') %}
{% endif %}
<div class="col-md-4 az-popular-item container">
    <div class="row text-center az-main-popular-item-img-div">
        <div class="col-md-12">
            <a href="{{ path('picture', {'id': picture.id}) }}"><img src="{{ img }}" class="az-main-popular-item-img"></a>
        </div>
    </div>
    <div class="row">
        <div class="az-main-popular-item-header-category">
            {% if picture.title|length > 58 %}
                {% set picture_title = picture.title|slice(0, 55) ~ '...' %}
            {% else %}
                {% set picture_title = picture.title %}
            {% endif %}
            <a href="{{ path('picture', {'id': picture.id}) }}">"{{ picture_title }}"</a>
        </div>
    </div>
    <div class="row">
        <div class="az-main-popular-item-header-category">
            {% if picture.author is defined and picture.author and picture.author.slug is defined and picture.author.slug %}
                {% set author_url = path('author', {'slug': picture.author.slug}) %}
            {% else %}
                {% set author_url = '#' %}
            {% endif %}
            {% if picture.author is defined and picture.author and picture.author.name is defined and picture.author.name %}
                {% set author_name = picture.author.name %}
            {% else %}
                {% set author_name = '-' %}
            {% endif %}
            <span class="az_author"> Автор:</span> <a href="{{ author_url }}"> {{ author_name }}</a>
        </div>
    </div>
    {% if picture.categories is defined and picture.categories %}
        <div class="row">
            <div class="az-main-popular-item-header-category">
                <span class="az_author"> Категории:</span>
                {% for cat in picture.categories|slice(0, 5) %}
                    <a href="{{ path('category', {'slug': cat.slug}) }}"> {{ cat.title }}</a> {% if loop.last == false %},{% endif %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="az-main-popular-item-header-buttons container-fluid">
            <div class="row">
                <div class="col-md-6 text-right container-fluid az_btn_postpone">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn_az-main-popular_defer defer-bnt" data-id="{{ picture.id }}">Отложить</button>
                        </div>
                    </div>
                    <div class="row az-main-popular-item-header-buttons">
                        <div class="col-md-12 text-left_artik">
                            Артикул: {{ picture.code }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6 az_btn_order text-left">
                    <button class="btn_az-main-popular_order">Выбрать <br/>тип картины,<br/> размер, цена, <br/>заказать</button>
                </div>

            </div>
        </div>
    </div>
</div>