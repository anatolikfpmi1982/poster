{% if picture.imageBanner and picture.imageBanner.getFilename() %}
    {% set img = '/files/pictures/thumb/' ~ picture.imageBanner.getFilename() %}
{% else %}
    {% set img = asset('bundles/app/images/default_picture.jpg') %}
{% endif %}
<div class="col-md-4 az-popular-item container">
    <div class="row text-center az-main-popular-item-img-div">
        <div class="col-md-12">
            <a href="{{ path('picture', {'id': picture.id}) }}"><img src="{{ img }}" class="az-main-popular-item-img"></a>
        </div>
    </div>
    <div class="row">
        <div class="az-main-popular-item-header-category">
            <a href="{{ path('picture', {'id': picture.id}) }}">"{{ picture.title }}"</a>
        </div>
    </div>
    <div class="row">
        <div class="az-main-popular-item-header-category">
            <span class="az_author"> Автор:</span> <a href="{{ path('author', {'slug': picture.author.slug}) }}"> {{ picture.author.name }}</a>
        </div>
    </div>
    {% if picture.categories is defined and picture.categories %}
        {% for category in picture.categories %}
            {{ category.title }}{% if not loop.last %},{% endif %}
        {% endfor %}
    {% endif %}
    <div class="row">
        <div class="az-main-popular-item-header-buttons container-fluid">
            <div class="row">
                <div class="col-md-6 text-right container-fluid az_btn_postpone">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn_az-main-popular_defer">Отложить</button>
                        </div>
                    </div>
                    <div class="row az-main-popular-item-header-buttons">
                        <div class="col-md-12 text-left_artik">
                            Артикул: {{ picture.code }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6 az_btn_order text-left">
                    <button class="btn_az-main-popular_order">Выбрать </br>тип картины,</br> размер, цену, </br>заказать</button>
                </div>

            </div>
        </div>
    </div>
</div>