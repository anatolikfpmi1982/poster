{% if site_blocks is defined and site_blocks %}
    {% for key, block in site_blocks %}
        {% if block %}
            {% if key == 'Reviews' %}
                {% include('AppBundle:Component:Blocks/reviews.html.twig') %}
            {% elseif key == 'CategoryMenu' %}
                {% include('AppBundle:Component:Blocks/menu.html.twig') %}
            {% elseif key == 'ToDo' %}
                {% include('AppBundle:Component:Blocks/todo.html.twig') %}
            {% endif %}
        {% endif %}
    {% endfor %}
{% endif %}