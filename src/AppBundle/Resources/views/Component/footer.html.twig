<footer>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1">
                <img src="{{ asset('bundles/app/images/logo.png') }}" class="az-logo-footer-img" title="{% trans %}Logo{% endtrans %}"/>
            </div>
            <div class="col-md-10">&nbsp;</div>
            <div class="col-md-1">
                <img src="{{ asset('bundles/app/images/top.png') }}" class="az-up-footer-img" title="{% trans %}Up{% endtrans %}"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                {% if site_settings is defined and site_settings and site_settings.logo_footer_text is defined and site_settings.logo_footer_text %}
                    {{ site_settings.logo_footer_text|raw }}
                {% endif %}
            </div>
            <div class="col-md-3 container-fluid">
                <div class="row">Заказ можно сделать на сайте или по телефону</div>
                <div class="row">
                    <div class="col-md-3">
                        <img src="{{ asset('bundles/app/images/phone.png') }}" class="az-phone-footer-img" title="{% trans %}phone{% endtrans %}"/>
                    </div>
                    <div class="col-md-9">
                        {% if site_settings is defined and site_settings and site_settings.phone is defined and site_settings.phone %}
                            {{ site_settings.phone|raw }}
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <img src="{{ asset('bundles/app/images/mail.png') }}" class="az-mail-footer-img" title="{% trans %}phone{% endtrans %}"/>
                    </div>
                    <div class="col-md-9">
                        {% if site_settings is defined and site_settings and site_settings.email is defined and site_settings.email %}
                            {{ site_settings.email|raw }}
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-3">
                {% if site_settings is defined and site_settings and site_settings.contacts is defined and site_settings.contacts %}
                    {{ site_settings.contacts|raw }}
                {% endif %}
            </div>
        </div>
    </div>
</footer>