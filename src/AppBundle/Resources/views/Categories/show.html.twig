{% extends "AppBundle::layout.html.twig" %}

{% block title %}Категория {{ category.title }}{% endblock %}

{% block body %}
    <div class="row az-page-main-section-div">
        {% include('AppBundle:Component:Blocks/breadcrumb.html.twig') %}
    </div>
    <div class="row az-page-main-section-div">
        <div class="col-md-12 container-fluid">
            <div class="row page-title az-picture-page-title">{{ category.title }}</div>
            <div class="row az-category-page-description-div">
                {{ category.description }}
            </div>
            <div class="row az-category-page-filters-div">
                Filters block
            </div>
            {% if category.pictures %}
                <div class="row az-category-page-pictures-div">
                    <div class="row az-page-section-body az-page-main-popular container-fluid">
                        <div class="row">
                            {% for picture in category.pictures %}
                                {% if picture.image and picture.image.getFilename() %}
                                    {% set img = '/files/pictures/thumb/' ~ picture.image.getFilename() %}
                                {% else %}
                                    {% set img = asset('bundles/app/images/default_picture.jpg') %}
                                {% endif %}
                                <div class="col-md-4 container">
                                    <div class="row az-main-popular-item-img-div">
                                        <img src="{{ img }}" data-date="{{ picture.createdAt|date('F, d') }}" class="az-category-page-item-img">
                                    </div>
                                    <div class="row">
                                        <div class="az-main-popular-item-header-category">Летний день, Мерикюль</div>
                                    </div>
                                    <div class="row">
                                        <div class="az-main-popular-item-header-type">Живописные холсты</div>
                                    </div>
                                    <div class="row">
                                        <div class="az-main-popular-item-header-buttons container-fluid">
                                            <div class="row">
                                                <div class="col-md-6 text-left">
                                                    <button class="btn">Заказать</button>
                                                </div>
                                                <div class="col-md-6 text-right">
                                                    <button class="btn">Отложить</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row az-category-page-pictures-div">
                    В данной категории нет картин.
                </div>
            {% endif %}
            <div class="row az-pagination-block az-category-page-pagination-div">
                Pagination block
            </div>
            <div class="row az-visited-block az-category-page-visited-div">
                Visited block
            </div>
        </div>
    </div>
{% endblock %}
