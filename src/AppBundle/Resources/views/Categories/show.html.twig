{% extends "AppBundle::layout.html.twig" %}

{% block title %}Категория{% endblock %}

{% block body %}
    <div>
        <p>Категория "{{ category.title }}"
        {% if category.count %}
            ({{ category.count }})
        {% endif %}
        </p>
        <p>
            {{ category.description }}
        </p>
    </div>

    <table border="1">
        <tr>
            {# sorting of properties based on query components #}
            <th{% if pagination.isSorted('p.title') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Имя', 'p.title') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Дата', 'p.updatedAt') }}</th>
            {#<th>{{ knp_pagination_sortable(pagination, 'Release', 'r.createdAt') }}</th>#}
        </tr>
    </table>
    {% block pictures_list %} {% include 'AppBundle::Pictures/list.block.html.twig' %} {% endblock %}
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    {% block last_visited %} {% include 'AppBundle::Pictures/lastvisited.block.html.twig' %} {% endblock %}
{% endblock %}
