{% extends "AppBundle::layout.html.twig" %}

{% block title %}Мои файлы{% endblock %}

{% block meta_keywords %}{% if site_settings is defined and site_settings and site_settings.seo_keywords is defined and site_settings.seo_keywords %}{{ site_settings.seo_keywords }}{% else %}
    картины,картины на заказ
{% endif %}
{% endblock %}

{% block meta_description %}{% if site_settings is defined and site_settings and site_settings.seo_description is defined and site_settings.seo_description %}{{ site_settings.seo_description }}{% else %}
    картины,картины на заказ, сайт продаж картин
{% endif %}
{% endblock %}

{% block body %}
    <div class="row az-page-main-section-div">
        {% include('AppBundle:Component:Blocks/breadcrumb.html.twig') %}
    </div>
    <div class="row az-page-main-section-div">
        <div class="col-md-12 col-sm-12 container-fluid">
            <div class="row page-title az-picture-page-title">
                <div class="col-md-9 col-sm-9">Мои файлы</div>
                <div class="col-md-3 col-sm-3 az-header-download" data-toggle="modal" data-target="#myModal">
                    <div class="row">
                        <div class="col-md-3 col-sm-2 az-header-download-icon az-header-download-icon-title">
                            <img src="/bundles/app/images/download.png" class="az-download-title-img az-basket-title-img" title="download">
                        </div>
                        <div class="col-md-6 col-sm-6 az-header-download-div">
                            Загрузить свои изображения
                        </div>
                    </div>
                </div>
            </div>
            {% if pagination %}
                <div class="row az-category-page-pictures-div">
                    <div class="col-md-12 col-sm-12 az-page-section-body az-page-main-popular container-fluid">
                        {% if site_settings is defined and site_settings and site_settings.my_files_description is defined and site_settings.my_files_description %}
                            <p>{{ site_settings.my_files_description|raw }}</p>
                        {% endif %}
                        <div class="row">
                            {% for picture in pagination %}
                                {% include('AppBundle:Component:picture.cell.myfiles.html.twig') %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row az-category-page-pictures-div">
                    <div class="col-md-12 col-sm-12">
                        У вас нет загруженных картин.
                    </div>
                </div>
            {% endif %}
            {% if pagination %}
                <div class="row az-pagination-block az-category-page-pagination-div">
                    <div class="col-md-12 col-sm-12">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
