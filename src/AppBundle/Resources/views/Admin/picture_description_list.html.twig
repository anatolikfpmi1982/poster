{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    <div>
        {% set escape_value = value|striptags %}
        {% if escape_value|length > 28 %}
            {{ escape_value|slice(0, 25) ~ '...' }}
        {% else %}
            {{ escape_value }}
        {% endif %}
    </div>
{% endblock %}